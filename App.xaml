<Application x:Class="RazorTemplateViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:home="clr-namespace:RazorTemplateViewer.ViewModels.Home"
             xmlns:vm="clr-namespace:RazorTemplateViewer.ViewModels"
             xmlns:local="clr-namespace:RazorTemplateViewer" 
             xmlns:Views="clr-namespace:RazorTemplateViewer.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Assets.xaml" />
                <ResourceDictionary Source="Styles\colours.xaml" />
                <ResourceDictionary Source="Styles\Buttons.xaml" />
                <ResourceDictionary Source="Styles\TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <DataTemplate DataType="{x:Type home:HomeViewModel}">
                <Views:Home />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SplashViewModel}">
                <Views:Splash />
            </DataTemplate>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
