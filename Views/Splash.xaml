<UserControl
    x:Class="RazorTemplateViewer.Views.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <Rectangle Fill="White" />

        <Viewbox
            Width="520"
            Height="360"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <Grid Width="520" Height="380">
                <Grid
                    x:Name="PaperHost"
                    Width="320"
                    Height="380"
                    RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="PaperScale" ScaleX="0.6" ScaleY="0.6" />
                            <RotateTransform x:Name="PaperRotate" Angle="0" />
                            <TranslateTransform x:Name="PaperTranslate" X="0" Y="0" />
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="Grid.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--  Animate Scale  -->
                                    <DoubleAnimation
                                        Storyboard.TargetName="PaperScale"
                                        Storyboard.TargetProperty="ScaleX"
                                        From="0.2"
                                        To="1.0"
                                        Duration="0:0:1" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="PaperScale"
                                        Storyboard.TargetProperty="ScaleY"
                                        From="0.2"
                                        To="1.0"
                                        Duration="0:0:1" />

                                    <!--  Animate Rotation  -->
                                    <DoubleAnimation
                                        Storyboard.TargetName="PaperRotate"
                                        Storyboard.TargetProperty="Angle"
                                        To="360"
                                        Duration="0:0:1" />

                                    <!--  Animate Translation  -->
                                    <DoubleAnimation
                                        Storyboard.TargetName="PaperTranslate"
                                        Storyboard.TargetProperty="X"
                                        To="0"
                                        Duration="0:0:1.5" />

                                    <DoubleAnimation
                                        Storyboard.TargetName="PaperTranslate"
                                        Storyboard.TargetProperty="Y"
                                        To="0"
                                        Duration="0:0:1.5" />

                                    <!--<DoubleAnimation Storyboard.TargetName="PaperTranslate"
                                    Storyboard.TargetProperty="X"
                                    BeginTime="0:0:2"
                                    To="1000"
                                    Duration="0:0:1"
                                    AccelerationRatio="0.2"
                                    DecelerationRatio="0.8" />-->

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>



                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="30"
                                Opacity="0.6"
                                ShadowDepth="12"
                                Color="#000000" />
                        </Border.Effect>
                    </Border>

                    <Border
                        Background="White"
                        BorderBrush="#30384A"
                        BorderThickness="6"
                        CornerRadius="8">
                        <Grid>
                            <Path
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Data="M244,0 L320,0 L320,64 L244,0 Z"
                                Fill="#EAEFF4"
                                RenderTransformOrigin="1,1" />


                            <Border
                                Margin="18,24,0,0"
                                Padding="12,6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="#DF4B4B"
                                CornerRadius="6">
                                <TextBlock
                                    FontSize="36"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="PDF" />
                            </Border>


                            <StackPanel
                                Margin="28,110,28,24"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <Rectangle
                                    x:Name="line1"
                                    Width="200"
                                    Height="12"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    Fill="#E6ECF2"
                                    RadiusX="6"
                                    RadiusY="6" />
                                <Rectangle
                                    x:Name="line2"
                                    Width="200"
                                    Height="12"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    Fill="#E6ECF2"
                                    RadiusX="6"
                                    RadiusY="6" />
                                <Rectangle
                                    x:Name="line3"
                                    Width="230"
                                    Height="12"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    Fill="#E6ECF2"
                                    RadiusX="6"
                                    RadiusY="6" />
                                <Rectangle
                                    x:Name="line4"
                                    Width="120"
                                    Height="12"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    Fill="#E6ECF2"
                                    RadiusX="6"
                                    RadiusY="6" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
