<UserControl
    x:Class="RazorTemplateViewer.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:convertors="clr-namespace:RazorTemplateViewer.Convertors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:razortemplateviewer="clr-namespace:RazorTemplateViewer"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <convertors:BooleanToVisibilityConvertor x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Border CornerRadius="0 0 10 10">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*"
                    MinWidth="20"
                    d:Width="250" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition
                    Width="*"
                    MinWidth="20"
                    d:Width="500" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="*" MinWidth="20" />
            </Grid.ColumnDefinitions>

            <avalonEdit:TextEditor
                x:Name="HtmlEditor"
                Grid.Column="0"
                FontFamily="Consolas"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                ShowLineNumbers="True"
                SyntaxHighlighting="HTML"
                VerticalScrollBarVisibility="Auto" />


            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />

            <wv2:WebView2
                x:Name="pdfWebViewer"
                Grid.Column="2"
                Visibility="{Binding IsRendering, Converter={StaticResource BoolToVisibility}, ConverterParameter=reverse}"
                ZoomFactor="2" />

            <razortemplateviewer:Rendering Grid.Column="2" Visibility="{Binding IsRendering, Converter={StaticResource BoolToVisibility}}" />

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" />

            <avalonEdit:TextEditor
                x:Name="JsonEditor"
                Grid.Column="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontFamily="Consolas"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                ShowLineNumbers="True"
                SyntaxHighlighting="HTML"
                VerticalScrollBarVisibility="Auto" />

        </Grid>
    </Border>

</UserControl>
