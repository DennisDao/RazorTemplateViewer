<UserControl
    x:Class="RazorTemplateViewer.Rendering_2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RazorTemplateViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Storyboard x:Key="MarginAnimation">
            <ThicknessAnimation
                Storyboard.TargetName="leftPage"
                Storyboard.TargetProperty="Margin"
                To="75,0,0,0"
                Duration="0:0:1" />

            <DoubleAnimation
                Storyboard.TargetName="left_page_path"
                Storyboard.TargetProperty="StrokeThickness"
                From="8"
                To="0"
                Duration="0:0:2" />

            <ThicknessAnimation
                Storyboard.TargetName="line1"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <ThicknessAnimation
                Storyboard.TargetName="line2"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <ThicknessAnimation
                Storyboard.TargetName="line3"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <ThicknessAnimation
                Storyboard.TargetName="line4"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <!--  Animate BorderThickness  -->
            <!--<ThicknessAnimation
                Storyboard.TargetName="leftPage"
                Storyboard.TargetProperty="BorderThickness"
                From="0"
                To="4"
                Duration="0:0:2" />-->

            <!--  Animate BorderBrush color  -->
            <!--<ColorAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetName="leftPage"
                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                From="DarkBlue"
                To="Crimson"
                Duration="0:0:2" />-->

            <DoubleAnimation
                Storyboard.TargetName="page_frame"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:2" />

        </Storyboard>


        <Storyboard x:Key="MarginAnimation2">
            <ThicknessAnimation
                Storyboard.TargetName="rightPage"
                Storyboard.TargetProperty="Margin"
                To="-160,0,0,0"
                Duration="0:0:1" />

            <DoubleAnimation
                Storyboard.TargetName="right_page_path"
                Storyboard.TargetProperty="StrokeThickness"
                From="4"
                To="0"
                Duration="0:0:2" />

            <ThicknessAnimation
                Storyboard.TargetName="line5"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <ThicknessAnimation
                Storyboard.TargetName="line6"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <ThicknessAnimation
                Storyboard.TargetName="line7"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <ThicknessAnimation
                Storyboard.TargetName="line8"
                Storyboard.TargetProperty="Margin"
                To="0,0,0,0"
                Duration="0:0:1" />

            <!--<ThicknessAnimation
                Storyboard.TargetName="rightPage"
                Storyboard.TargetProperty="BorderThickness"
                From="0"
                To="4"
                Duration="0:0:2" />-->

        </Storyboard>

        <Storyboard
            x:Key="BlinkStoryboard"
            AutoReverse="True"
            RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="1.0"
                To="0.0"
                Duration="0:0:0.5" />
        </Storyboard>


    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle
            Grid.RowSpan="2"
            Margin="-2,0,2,0"
            Fill="#99000000" />

        <Border
            x:Name="page_frame"
            Width="290"
            Height="399"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="#30384A"
            BorderThickness="8"
            CornerRadius="5"
            Opacity="0" />



        <Grid
            Width="450"
            Height="400"
            Margin="28,17,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Border
                x:Name="leftPage"
                Grid.Column="0"
                Margin="-150,0,0,0"
                Loaded="leftPage_Loaded">

                <Grid>
                    <Path
                        x:Name="left_page_path"
                        Data="M 0 0 L 159 0 L 126 30 L 151 57 L 134 102 L 157 144 L 126 178 L 158 222 L 132 260 L 160 300 L 130 339 L 160 383 L 0 381 L 0 0"
                        Fill="white"
                        SnapsToDevicePixels="True"
                        Stroke="#30384A"
                        StrokeEndLineCap="Round"
                        StrokeLineJoin="Round"
                        StrokeStartLineCap="Round"
                        StrokeThickness="8" />

                    <Border
                        Margin="18,24,0,0"
                        Padding="12,6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#DF4B4B"
                        CornerRadius="6">
                        <TextBlock
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="PDF" />
                    </Border>


                    <Path
                        x:Name="line1"
                        Margin="-6,0,0,0"
                        Data="M 36 139 A 1 1 0 0 0 36 156 L 146 156 L 157 144 L 154 139 L 36 139"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />

                    <Path
                        x:Name="line2"
                        Margin="-4.8,0,0,0"
                        Data="M 35 176 A 1 1 0 0 0 35 195 L 139 196 L 126 178 L 128 176 L 35 176"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />

                    <Path
                        x:Name="line3"
                        Margin="-5,0,0,0"
                        Data="M 35 210 A 1 1 0 0 0 35 227 L 154 228 L 158 222 L 149 210 L 35 210"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />

                    <Path
                        x:Name="line4"
                        Margin="-5,0,0,0"
                        Data="M 35 241 A 1 1 0 0 0 35 260 L 133 261 L 132 260 L 144 242 L 35 241"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />


                </Grid>


            </Border>

            <Border
                x:Name="rightPage"
                Grid.Column="1"
                Margin="-60,0,0,0"
                Loaded="rightPage_Loaded">
                <Grid>
                    <Path
                        x:Name="right_page_path"
                        Data="M 280 0 L 159 0 L 126 30 L 151 57 L 134 102 L 157 144 L 126 178 L 158 222 L 132 260 L 160 300 L 130 339 L 160 383 L 281 381 L 281 0"
                        Fill="white"
                        SnapsToDevicePixels="True"
                        Stroke="#30384A"
                        StrokeEndLineCap="Round"
                        StrokeLineJoin="Round"
                        StrokeStartLineCap="Round"
                        StrokeThickness="8" />

                    <Path
                        x:Name="line5"
                        Margin="5.8,0,0,0"
                        Data="M 202 139 L 154 139 L 157 144 L 146 156 L 202 156 A 1 1 0 0 0 202 139"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />

                    <Path
                        x:Name="line6"
                        Margin="6,0,0,0"
                        Data="M 128 176 L 229 176 M 229 176 L 229 194 L 229 195 A 1 1 0 0 0 229 176 L 139 196 L 126 178 L 128 176 M 229 176 L 229 195 L 139 196"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />

                    <Path
                        x:Name="line7"
                        Margin="5,0,0,0"
                        Data="M 149 210 L 168 210 L 168 228 L 154 228 L 158 222 M 168 210 L 168 228 A 1 1 0 0 0 168 210"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />

                    <Path
                        x:Name="line8"
                        Margin="6,0,0,0"
                        Data="M 133 261 L 132 260 L 144 242 L 189 242 L 189 261 A 1 1 0 0 0 189 242 L 133 261 M 189 242 L 189 261 L 133 261"
                        Fill="#E6ECF2"
                        Stroke="Transparent" />
                </Grid>

            </Border>
        </Grid>


    </Grid>
</UserControl>
